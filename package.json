{
  "name": "json-schema-editor",
  "private": true,
  "type": "module",
  "description": "A lightweight json editor based on codemirror, providing smart prompts and verification based on json-schema",
  "author": "rookie-luochao",
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter './packages/**' run build",
    "build:app": "pnpm --filter './packages/json-schema-editor-react' run build:app",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "changeset publish",
    "test": "vitest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.5",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix --quiet"
    ],
    "*.(ts|tsx|vue|json|html)": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 120
  }
}
